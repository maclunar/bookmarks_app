<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @bookmark.name %>
</p>

<p>
	<strong>ID:</strong>
	<%= @bookmark.id %>
</p>

<p>
  <strong>Url:</strong>
  <a href="<%= @bookmark.url %>"><%= @bookmark.url %></a>
</p>

<p>
  <strong>Domain:</strong>
  <%= Domain.find(@bookmark.domain_id).domain %>
</p>

<p>
	<strong>Tags:</strong>
	<%= raw @bookmark.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
	<%= @bookmark.tag_list.each { |tag| puts "#{tag} " } %>
</p>

<%= link_to 'Edit', edit_bookmark_path(@bookmark) %> |
<%= link_to 'Back', bookmarks_path %>
